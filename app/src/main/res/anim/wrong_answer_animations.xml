<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--duration is in ms-->
    <!--animation is movement on y axis, so use Y delta-->
    <!--from pos 0 to upwards on Y axis (-ve) to down on y axis (+ve) to up (-ve)-->
    <!--start offset is delay in ms before performing the translation-->

    <translate
        android:duration="100"
        android:fromYDelta="0"
        android:toYDelta="-4%p"/>

    <translate
        android:duration="100"
        android:fromYDelta="-4%p"
        android:toYDelta="4%p"
        android:startOffset="100"/>

    <translate
        android:duration="100"
        android:fromYDelta="4%p"
        android:toYDelta="-4%p"
        android:startOffset="200"/>

</set>